{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "plugins": ["react"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "rules": {
    "no-debugger": "warn",
    "no-console": "off",
    "no-unused-vars": "warn",
    "react/prop-types": "warn",
    "import/no-unresolved": "off",
    "react/jsx-key": "off",
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "react/sort-prop-types": "error",
    "react/no-unused-prop-types": "warn",
    "react/jsx-sort-props": [
      "error",
      {
        "callbacksLast": true,
        "shorthandLast": false,
        "ignoreCase": true,
        "noSortAlphabetically": false,
        "reservedFirst": true
      }
    ]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "root": true
}
